generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String    @unique
  text      String
  comments  Comment[]
  createdAt DateTime  @default(now())
  authorId  Int
  author    User      @relation(fields: [authorId], references: [id])
  published Boolean   @default(false)
  likes     Int       @default(0)
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  author    String
  postId    Int
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  posts    Post[]
  email    String @unique
  password String
}
